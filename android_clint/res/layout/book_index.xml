<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/bookindex_image"
        android:layout_width="140dip"
        android:layout_height="200dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/bookindex_bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/bookindex_image"
        android:text="《书名》"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/bookindex_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bookindex_bookname"
        android:layout_below="@+id/bookindex_bookname"
        android:layout_marginTop="16dp"
        android:text="作者名"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bookindex_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bookindex_author"
        android:layout_below="@+id/bookindex_author"
        android:layout_marginTop="22dp"
        android:text="关注" />

</RelativeLayout>